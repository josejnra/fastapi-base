// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "FastAPI App",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	// binding .ssh dir into dev container for fixing issue with git
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],

	"runArgs": ["--name=vscode-fastapi-base"],

	"remoteEnv": {
		"PYTHONPYCACHEPREFIX": "/home/vscode/.cache/cpython/"
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"dockerDashComposeVersion": "v2"
		}
	},
	"customizations": {
		"vscode": {
            "extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.autopep8",
				"ms-python.flake8",
				"ms-python.pylint",
				"ms-python.vscode-pylance",
				"ms-python.mypy-type-checker",
				"ryanluker.vscode-coverage-gutters",
				"emeraldwalk.RunOnSave",
				"eamodio.gitlens",
				"waderyan.gitblame",
				"tamasfe.even-better-toml",
				"streetsidesoftware.code-spell-checker",
				"njpwerner.autodocstring"
			],
			"settings": {
				"terminal.integrated.scrollback": 10000,
				"terminal.integrated.profiles.linux": {
					"poetry-shell": {
						"path": "poetry",
						"args": ["shell"]
					}
				},
				// "terminal.integrated.defaultProfile.linux": "poetry-shell",  # spawns a terminal on top of sh 
                "python.defaultInterpreterPath": "/workspaces/fastapi-base/.venv/bin/python",
				"mypy.dmypyExecutable": "/workspaces/fastapi-base/.venv/bin/dmypy",
				"mypy-type-checker.path": ["/workspaces/fastapi-base/.venv/bin/mypy"],
				"python.testing.pytestPath": "/workspaces/fastapi-base/.venv/bin/pytest",
				"flake8.interpreter": ["/workspaces/fastapi-base/.venv/bin/flake8"],
				"flake8.path": ["/workspaces/fastapi-base/.venv/bin/flake8"],
				"emeraldwalk.runonsave": {
                    "commands": [
                        {
                            "match": ".py",
                            "isAsync": false,
                            "cmd": "npm run algo"
                        }
                    ]
                }
			}
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh ./.devcontainer/setup.sh",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
